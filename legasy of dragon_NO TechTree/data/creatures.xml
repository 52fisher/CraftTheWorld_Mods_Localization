      <attack value="10"/>
      <shot_time value="1"/>
      <resources value="bone-1-50"/>
    </params>
	<behaviours>
      <behaviour value="MonsterLogicBehaviour">
        <script value="data/components/ai/defender.lua"/>
      </behaviour>
      <behaviour value="PathfindingBehaviour">
        <can_climb value="true"/>
        <can_fly_up value="true"/>
        <can_jump value="true"/>
      </behaviour>
      <behaviour value="MeleBattleBehaviour"/>
      <behaviour value="KillMobBehaviour">
        <life_time value="30"/>
      </behaviour>
    </behaviours>  
    <sounds>
      <hit value="hit_metall_metall"/>
      <step value="skeleton_step"/>
      <ambient value="skeleton_ambient"/>
      <die value="skeleton_death"/>
    </sounds>
    <animations>
      <ani name="cantdo" ani="d_skeleton\main2"/>
      <ani name="idle" ani="d_skeleton\main2"/>
      <ani name="stop" ani="d_skeleton\main"/>
      <ani name="move" ani="d_skeleton\walk"/>
      <ani name="move1" ani="d_skeleton\walk2"/>
      <ani name="move2" ani="d_skeleton\walk3"/>
      <ani name="move3" ani="d_skeleton\walk4"/>
      <ani name="shield" ani="d_skeleton\shield_up,shield_up_continue"/>
      <ani name="shield_down" ani="d_skeleton\shield_down"/>
      <ani name="action" ani="d_skeleton\attack"/>
      <ani name="climb" ani="d_skeleton\walk"/>
      <ani name="jump" ani="d_skeleton\jump"/>
      <!--<ani name="dies_end" ani="creature_dies"/>-->
      <ani name="dies_end" ani="d_skeleton\death"/>
    </animations>
    <spine_elements>
      <random slots="leg1_feet2,leg1_feet1,leg1_2" attach_count="2"/>  <!--выбираем рандомно один из аттачей к указаным слотам, атачей должно быть одинаковое кол-во-->
      <random slots="head" attach_count="3"/>
      <random slots="wipon" attach_count="2"/>
      <show_hide slots="shoulder"/>
    </spine_elements>
